generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Comment {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  blog      Blog   @relation(fields: [blogId], references: [id])
  blogId    String @unique
}

model Blog {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  author      String
  category    String
  createdAt   DateTime @db.Date
  description String
  imageUrl    String
  title      String
  updatedAt   DateTime @db.Date
  authorEmail String
  comments   Comment[]
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String
  password String
  username String
}
